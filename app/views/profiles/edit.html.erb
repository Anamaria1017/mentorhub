<div class="container col-8">
  <h1 class ="t-2">Edit my profile</h1>
  <br>
  <div>
    <%= simple_form_for(@profile) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <h2>General information</h2>
    <div class="form-inputs">
      <%= f.input :first_name %>
    </div>

    <div class="form-inputs">
      <%= f.input :last_name %>
    </div>

    <div class="form-inputs">
      <%= f.input :username %>
    </div>

    <div class="form-inputs">
      <%= f.input :birthday, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12,
                              order: [:day, :month, :year] %>
    </div>

    <div class="form-inputs">
      <%= f.input :languages %>
    </div>

    <div class="form-inputs">
      <%= f.input :city %>
    </div>

    <h2>Match Preferences</h2>

    <% if @profile.mentor == false %>

    <div class="form-inputs">
      <%= f.input :highest_education %>
    </div>

    <div class="form-inputs">
      <%= f.input :edu_organization %>
    </div>

    <div class="form-inputs">
      <%= f.input :working_experience %>
    </div>

    <div class="form-inputs">
      <%= f.input :position %>
    </div>

    <div class="form-inputs">
      <%= f.input :bio %>
    </div>

    <div class="form-inputs">
      <%= f.input :target_industry %>
    </div>

    <div class="form-inputs">
      <%= f.input :preferred_language %>
    </div>

    <div class="form-inputs">
      <%= f.input :type_of_meeting %>
    </div>

    <div class="form-inputs">
      <%= f.input :proximity_preference %>
    </div>

    <div class="form-inputs">
      <%= f.input :mentor_skills %>
    </div>

    <% else %>

    <div class="form-inputs">
      <%= f.input :mentor_industry %>
    </div>

    <div class="form-inputs">
      <%= f.input :position %>
    </div>

    <div class="form-inputs">
      <%= f.input :mentor_skills %>
    </div>

    <div class="form-inputs">
      <%= f.input :bio %>
    </div>

    <div class="form-inputs">
      <%= f.input :highest_education %>
    </div>

    <div class="form-inputs">
      <%= f.input :target_industry %>
    </div>

    <div class="form-inputs">
      <%= f.input :working_experience %>
    </div>

    <div class="form-inputs">
      <%= f.input :preferred_language %>
    </div>

    <div class="form-inputs">
      <%= f.input :type_of_meeting %>
    </div>

    <div class="form-inputs">
      <%= f.input :proximity_preference %>
    </div>

    <% end %>

    <div class="form-inputs">
      <%= f.input :photo, as: :file %>
    </div>


    <div class="form-actions">
      <%= f.button :submit , class: "btn btn-outline-dark" %>
    </div>
    <% end %>

    <br>

    <div>
      <%= link_to "Back", profile_path(@profile), class:"btn btn-outline-dark"%>
    </div>
  </div>
</div>
