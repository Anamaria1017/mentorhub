<div class="container">
  <%# @meetings.each do |meeting| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @meeting.name %></h5>
        <h3 class="card-text card-badge">
        <% if @meeting.status == 'pending' %>
        <span class="badge badge-secondary"><%= @meeting.status.capitalize %></span>
        <% end %>
        <% if @meeting.status == 'accepted' %>
        <span class="badge badge-success"><%= @meeting.status.capitalize %></span>
        <% end %>
        <% if @meeting.status == 'declined' %>
        <span class="badge badge-danger"><%= @meeting.status.capitalize %></span>
        <% end %>
        </h3>
        <p class="card-text"> <i class="fa-solid fa-calendar-days"></i> <%=@meeting.start_time%> - <%=@meeting.end_time%></p>
        <p class="card-text">Location: â‚¬ <%=@meeting.location%></p>
      </div>
      <div class = "action-buttons">
        <% if @meeting.profile == current_user.profile && @meeting.status == 'pending' %>
          <%= button_to "Accept", meeting_path(@meeting, status: 1), method: :patch, class: "btn btn-light" %>
        <% end %>
        <% if @meeting.profile == current_user.profile && @meeting.status == 'pending' %>
          <%= button_to "Decline", meeting_path(@meeting, status: 2), method: :patch, class: "btn btn-light" %>
        <% end %>
      </div>
    </div>
    <div class= "p-2">
      <%= link_to "My meetings", meetings_path(@meeting), class: "btn btn-dark" %>
    </div>
          <%# cards end%>
</div>
