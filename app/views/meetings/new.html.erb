<br>
  <div>
    <%= simple_form_for [@match, @meeting] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
      </div>

      <div class="form-inputs">
        <%= f.input :start_time, as: :datetime, html5: true %>
      </div>

      <div class="form-inputs">
        <%= f.input :end_time, as: :datetime, html5: true %>
      </div>

      <div class="form-inputs">
        <%= f.input :location %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-outline-dark" %>
      </div>
      <br>
    <% end %>
    <div>
      <%= link_to "Back to meetings", meetings_path, class: "btn btn-outline-dark"%>
    </div>
  </div>
</div>
