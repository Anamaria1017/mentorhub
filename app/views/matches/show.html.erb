<div class="container">
  <div class="cards-match">
    <% if @profile.mentor == false %>
      <%# I am a Mentee and should see Mentors %>
      <div class="card-match">
        <div class = "row p-3">
          <% if @match.mentor.photo.attached?%>
            <%= cl_image_tag @match.mentor.photo.key, class: "match-avatar", crop: :fill, class: "col-3 ml-2" %>
          <% else %>
                <%= image_tag "logo.webp", class: "match-avatar", crop: :fill, class: "col-3 ml-2" %>
          <% end %>
          <div class = "col-8">
            <h3><%= @match.mentor.first_name %> <%= @match.mentor.last_name %></h3>
            <h5><%= @match.mentor.city %></h5>
          </div>
        </div>
        <div class="card-match-info">
          <p>Industry: <%= @match.mentor.target_industry %></p>
          <% unless @match.mentor.mentor_skills.blank? %><p>My skills: <%= @match.mentor.mentor_skills%></p><% end %>
          <% unless @match.mentor.birthday.blank? %><p>Birthday: <%= @match.mentor.birthday%></p><% end %>
          <% unless @match.mentor.highest_education.blank? %><p>Highest education title: <%= @match.mentor.highest_education %></p><% end %>
          <% unless @match.mentor.edu_organization.blank? %><p>School/University: <%= @match.mentor.edu_organization%></p><% end %>
          <% unless @match.mentor.position.blank? %><p>Last role: <%= @match.mentor.position %></p><% end %>
          <% unless @match.mentor.languages.blank? %><p>Languages: <%= @match.mentor.languages %></p><% end %>
          <% unless @match.mentor.preferred_language.blank? %><p>Preferred Meeting Language: <%= @match.mentor.preferred_language%></p><% end %>
          <% unless @match.mentor.type_of_meeting.blank? %><p>Preferred type of meeting: <%= @match.mentor.type_of_meeting.capitalize%></p><% end %>
          <% unless @match.mentor.proximity_preference.blank? %><p>Preferred proximity <%= @match.mentor.proximity_preference%></p><% end %>
          <% unless @match.mentor.bio.blank? %><p>About me: <%= @match.mentor.bio%></p><% end %>
        </div>
        <div class="row p-3 justify-content-between">
          <%= link_to "Send invite", new_match_meeting_path(@match), class: "purple-button col-3 ml-4"%>
          <div class="show-card-btn col-8 flex-row-reverse ml-4" style="padding-left: 150px">
            <%= link_to match_path(@match, match: false), data: {turbo_method: :patch, turbo_confirm: "Are you sure you want to delete match?"} do %>
              <i class="fa-solid fa-ban fa-xl"></i>
            <% end %>
            <%= link_to chatrooms_path(chat: @match.chatroom) do %>
                <i class="fa-regular fa-envelope fa-xl"></i>
            <% end %>
            <% if @match.like.liked %>
              <%= link_to like_path(@match.like), data: {turbo_method: :patch} do %>
                  <i class="fa-solid fa-heart fa-xl"></i>
              <% end %>
            <% else %>
              <%= link_to like_path(@match.like), data: {turbo_method: :patch} do %>
                  <i class="fa-regular fa-heart fa-xl"></i>
              <% end %>
            <% end %>
          </div>
        </div>

      <% else %>
        <%# I am Mentor and should see Mentees %>
        <div class="card-match">
          <div class = "row p-3">
            <% if @match.mentee.photo.attached?%>
              <%= cl_image_tag @match.mentee.photo.key, class: "match-avatar", crop: :fill, class: "col-3 ml-2" %>
            <% else %>
                  <%= image_tag "logo.webp", class: "match-avatar", crop: :fill, class: "col-3 ml-2" %>
            <% end %>
            <div class = "col-8">
              <h3><%= @match.mentee.first_name %> <%= @match.mentee.last_name %></h3>
              <h5><%= @match.mentee.city %></h5>
            </div>
          </div>
          <div class="card-match-info">
              <p>Industry: <%= @match.mentee.target_industry %></p>
              <% unless @match.mentee.birthday.blank?%><p>Birthday: <%= @match.mentee.birthday%></p><% end %>
              <% unless @match.mentee.highest_education.blank? %><p>Highest education title: <%= @match.mentee.highest_education %></p><% end %>
              <% unless @match.mentee.edu_organization.blank? %><p>School/University: <%= @match.mentee.edu_organization%></p><% end %>
              <% unless @match.mentee.working_experience.blank? %><p>Working experience: <%= @match.mentee.working_experience %></p><% end %>
              <% unless @match.mentee.position.blank? %><p>Current role: <%= @match.mentee.position %></p><% end %>
              <% unless @match.mentee.languages.blank? %><p>Languages:<%= @match.mentee.languages %></p><% end %>
              <% unless @match.mentee.preferred_language.blank? %><p>Preferred Meeting Language: <%= @match.mentee.preferred_language%></p><% end %>
              <% unless @match.mentee.type_of_meeting.blank? %><p>Preferred type of meeting: <%= @match.mentee.type_of_meeting.capitalize%></p><% end %>
              <% unless @match.mentee.proximity_preference.blank? %><p>Preferred proximity <%= @match.mentee.proximity_preference%></p><% end %>
              <% unless @match.mentee.bio.blank? %><p>About me: <%= @match.mentee.bio%></p><% end %>
          </div>
            <div class="row p-3 justify-content-between">
              <%= link_to "Send invite", new_match_meeting_path(@match), class: "purple-button col-3 ml-4"%>
              <div class="show-card-btn col-8 flex-row-reverse ml-4" style="padding-left: 150px">
              <%= link_to match_path(@match, match: false), data: {turbo_method: :patch, turbo_confirm: "Are you sure you want to delete match?"} do %>
              <i class="fa-solid fa-ban fa-xl"></i>
              <% end %>
              <%= link_to chatrooms_path(chat: @match.chatroom) do %>
                  <i class="fa-regular fa-envelope fa-xl"></i>
              <% end %>
              <% if @match.like.liked %>
                <%= link_to like_path(@match.like), data: {turbo_method: :patch} do %>
                    <i class="fa-solid fa-heart fa-xl"></i>
                <% end %>
              <% else %>
                <%= link_to like_path(@match.like), data: {turbo_method: :patch} do %>
                    <i class="fa-regular fa-heart fa-xl"></i>
                <% end %>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
    <div class=" d-flex justify-content-center">
      </div>
        <%= link_to "Back", matches_path, class: "purple-button-outline justify-content-center" %>
    </div>
</div>
